<h6>{{boardName}}</h6>
<div class="row">
<div class="col s4">
    <p>Todo ({{todo.length}})</p>
    {{#if todo}}
        {{#each todo}}
            <div class="row">
                <div class="col s12 m10">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title ">{{title}}</span>
                            <p >{{description}}</p>
                        </div>
                        <div class="card-action">
                            <a href="/boards/{{../boardId}}/{{_id}}/edit">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>There are no tasks to do at this time</p>
    {{/if}}
</div>

<div class="col s4">
    <p>Doing ({{doing.length}})</p>
    {{#if doing}}
        {{#each doing}}
            <div class="row">
                <div class="col s12 m10">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">{{title}}</span>
                            <p>{{description}}</p>
                        </div>
                        <div class="card-action">
                            <a href="/boards/{{../boardId}}/{{_id}}/edit">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>There is no ongoing task at this time</p>
    {{/if}}
</div>

<div class="col s4">
    <p>Done ({{done.length}})</p>
    {{#if done}}
        {{#each done}}
            <div class="row">
                <div class="col s12 m10">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">{{title}}</span>
                            <p>{{description}}</p>
                        </div>
                        <div class="card-action">
                            <a href="/boards/{{../boardId}}/{{_id}}/edit">Edit</a>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>There is no finished task at this time</p>
    {{/if}}
</div>

</div>
{{> _add_task_btn}}



